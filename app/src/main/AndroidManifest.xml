<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.acme.tictactoe">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--MVC pattern example-->
        <activity
            android:name=".mvc.controller.TicTacToeActivity"
            android:screenOrientation="portrait" />

        <!--MVP pattern example-->
        <activity
            android:name=".mvp.view.TicTacToeActivity"
            android:screenOrientation="portrait" />

        <!--MVVM pattern example-->
        <activity
            android:name=".mvvm.view.TicTacToeActivity"
            android:screenOrientation="portrait" />

        <!--MVVM pattern example-->
        <activity
            android:name=".mvpwithdatabinding.view.TicTacToeActivity"
            android:label="@string/app_name_mvp_databinding"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>